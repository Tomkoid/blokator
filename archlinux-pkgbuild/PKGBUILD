pkgname="blokator"
pkgver=0.1.2
pkgrel=2
pkgdesc="Simple system-wide adblocker"
arch=("x86_64")
makedepends=("rustup")
license=("GPL3")
source=("git+https://gitlab.com/Tomkoid/blokator")
sha512sums=("SKIP")

build() {
  cd "$srcdir/blokator"
  cargo build --release
}

package() {
  install -Dm755 "${srcdir}/blokator/target/release/blokator" "${pkgdir}/usr/bin/blokator"
}
